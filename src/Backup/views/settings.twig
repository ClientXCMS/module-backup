<div class="row">
    <div class="col-sm-12 col-md-6">
        {{ field("max_backup_keeping", setting('max_backup_keeping', '4'),trans("backup.settings.max_keeping"), {type: 'number'}) }}
    </div>
    <div class="col-sm-12 col-md-6">
        {{ field("hour_between_backup", setting('hour_between_backup', '12'),trans("backup.settings.between_backup"),  {type: 'number'}) }}
    </div>
</div>
<p>
    {{ trans("backup.settings.detected") }}
</p>
<ul>
    {% for type in types %}
        <li>{{ type.name }} {%  if type.type == 'googledrive' and gdrivelink %}    <a href="{{ gdrivelink }}"  target="_blank">{{ trans("backup.settings.connectwithgoogle") }}</a>
            {% endif %} {% if type in detected %} <i class="fa fa-check text-success"></i>{% else %} <i class="fa fa-times text-danger"></i> <p class="text-muted">{{ type.help }}</p>{% endif %}</li>
    {% endfor %}
</ul>
